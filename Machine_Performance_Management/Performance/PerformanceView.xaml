<UserControl x:Class="Machine_Performance_Management.Performance.PerformanceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors" 
             xmlns:viewmodel="clr-namespace:Machine_Performance_Management.Performance"
             d:DataContext="{d:DesignInstance Type=viewmodel:PerformanceViewModel}"
             
             Background="{DynamicResource BackgroundBrush}"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="55*" />
            <RowDefinition Height="7*" />
        </Grid.RowDefinitions>

        <Border BorderThickness="1" Grid.Row="0">
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2.5*"/>
                    <ColumnDefinition Width="2.5*"/>
                    <ColumnDefinition Width="2.5*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <DockPanel Grid.Column="0" HorizontalAlignment="Left" Margin="20">
                <TextBlock
                Text="Factory:"
                FontWeight="Bold"
                Height="25" Width="100"/>

                <ComboBox
                Height="25" Width="100"
                ItemsSource="{Binding FactoryitemDataManagement}"
                SelectedItem="{Binding SelectedFactoryItemDataManagement, Mode=TwoWay}"
                    />
            </DockPanel>

            <DockPanel Grid.Column="1" HorizontalAlignment="Left">
                <TextBlock
                Text="Month:"
                FontWeight="Bold"
                Height="25" Width="100"/>

                <ComboBox
                Height="25" Width="100"/>
            </DockPanel>

                <DockPanel Grid.Column="2" HorizontalAlignment="Left">
                <TextBlock
                Text="Year:"
                FontWeight="Bold"
                Height="25" Width="100"/>

                <ComboBox
                Height="25" Width="100"/>
            </DockPanel>

                <!--<Button Grid.Column="3"
                    HorizontalAlignment="Left"
                    Command="{Binding ImportCommand}"
                    Content="📥 Import" 
                     Height="25" Width="100"/>-->

                <Button Grid.Column="3"  Margin="0 0 5 0"
                Command="{Binding ImportCommand}"
                            Style="{StaticResource ButtonStyleSmall}"
                            Cursor="Hand"
                            VerticalAlignment="Center"
                            ToolTip="Import dữ liệu từ QR"
                            DockPanel.Dock="Right"
                    HorizontalAlignment="Left">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="📥" FontSize="16"/>
                        <TextBlock Text="Import Data" FontWeight="Bold"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <Border BorderThickness="1" Grid.Row="1">
            <DataGrid  x:Name="MyDataGrid" Margin="10" Background="{DynamicResource BackgroundBrush}"
                  Style="{StaticResource ModernDataGrid}"
                  ItemsSource="{Binding PerFormanceData}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  IsReadOnly="True"
                   MouseLeftButtonUp="DataGrid_MouseDoubleClick">

                <!--<DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Style.Triggers>
                        <DataTrigger>
                            <Setter Property="Background" Value="AliceBlue"/>
                            <Setter Property="Foreground" Value="Black"/>
                            <Setter Property="FontWeight" Value="DemiBold"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>-->

                <!--<DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="BorderBrush" Value="LightGray"/>
                        <Setter Property="BorderThickness" Value="0.5"/>
                        <Style.Triggers>
                            --><!-- Khi ô được chọn --><!--
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#FFFFCC"/>
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.CellStyle>-->


                <DataGrid.Resources>
                    <Style TargetType="DataGridCell">
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#2980B9"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="Padding" Value="8 4"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="NO" Binding="{Binding NO}" Width="40"/>
                    <DataGridTextColumn Header="Factory" Binding="{Binding Factory}" Width="75"/>
                    <DataGridTextColumn Header="Machine Type" Binding="{Binding Item}" Width="95"/>
                    <DataGridTextColumn Header="Machine Name" Binding="{Binding Machine_Name}" Width="115"/>

                    <!--<DataGridTemplateColumn Header="Machine Name" Width="120">

                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Machine_Name}" 
                                   Foreground="Blue" 
                                   Cursor="Hand"
                                   TextWrapping="Wrap" 
                                   TextDecorations="Underline">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="MouseLeftButtonUp">
                                    <i:InvokeCommandAction Command="{Binding DataContext.MachineNameClickCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                                           CommandParameter="{Binding}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>-->


                    <!-- Cột ngày sẽ thêm động ở code-behind -->

                    <DataGridTextColumn Header="Average" Binding="{Binding AveragePerformance, StringFormat={}{0:F2}}" 
                                    Width="70"/>
                </DataGrid.Columns>
            </DataGrid>

        </Border>

        <Grid Grid.Row="2">
            <Button Content="📊 Chart"  Margin="15 0 0 0"
                    Style="{StaticResource ButtonStyleSmall}"
                    Width="100"
                    HorizontalAlignment="Left"
                    Command="{Binding MachineNameClickCommand}"/>
        </Grid>
        <!-- Popup hiển thị chi tiết -->
        <Popup x:Name="DetailPopup"
               StaysOpen="False"
               Placement="MousePoint"
               AllowsTransparency="True"
               PopupAnimation="Fade">
            <Border Background="White" Padding="15" CornerRadius="10" BorderThickness="1" >
                <StackPanel>
                    <TextBlock Text="Information Detail"
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="DarkBlue"
                       Margin="0,0,0,10"
                       TextAlignment="Center"/>
                    <Separator Margin="0,2"/>
                    
                    <TextBlock x:Name="PopupModel" Margin="5"/>
                    <Separator Margin="0,2"/>
                    
                    <TextBlock x:Name="PopupCompleted" Margin="5"/>
                    <Separator Margin="0,2"/>
                    
                    <TextBlock x:Name="PopupST" Margin="5"/>
                    <Separator Margin="0,2"/>
                    
                    <TextBlock x:Name="PopupReason" Margin="5"/>
                    <Separator Margin="0,2"/>
                    
                    <!--<Button Content="Close" Margin="0,10,0,0" Width="80" 
                            HorizontalAlignment="Right"
                            Click="ClosePopup_Click"/>-->
                </StackPanel>
            </Border>
        </Popup>
    </Grid>
</UserControl>
