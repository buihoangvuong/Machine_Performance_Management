<UserControl x:Class="Machine_Performance_Management.Performance.PerformanceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewmodel="clr-namespace:Machine_Performance_Management.Performance"
             d:DataContext="{d:DesignInstance Type=viewmodel:PerformanceViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.5*"/>
                <ColumnDefinition Width="2.5*"/>
                <ColumnDefinition Width="2.5*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <DockPanel Grid.Column="0" HorizontalAlignment="Left" Margin="20">
                <TextBlock
                Text="Factory:"
                FontWeight="Bold"
                Height="25" Width="100"/>

                <ComboBox
                Height="25" Width="100"
                ItemsSource="{Binding FactoryitemDataManagement}"
                SelectedItem="{Binding SelectedFactoryItemDataManagement, Mode=TwoWay}"
                    />
            </DockPanel>

            <DockPanel Grid.Column="1" HorizontalAlignment="Left">
                <TextBlock
                Text="Month:"
                FontWeight="Bold"
                Height="25" Width="100"/>

                <ComboBox
                Height="25" Width="100"/>
            </DockPanel>

            <DockPanel Grid.Column="2" HorizontalAlignment="Left">
                <TextBlock
                Text="Year:"
                FontWeight="Bold"
                Height="25" Width="100"/>

                <ComboBox
                Height="25" Width="100"/>
            </DockPanel>
            
            <Button Grid.Column="3"
                    HorizontalAlignment="Left"
                    Command="{Binding ImportCommand}"
                    Content="📥 Import" 
                     Height="25" Width="100"/>
        </Grid>

        <DataGrid Grid.Row="1" x:Name="MyDataGrid"
                  ItemsSource="{Binding PerFormanceData}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  IsReadOnly="True"
                   MouseLeftButtonUp="DataGrid_MouseDoubleClick">

            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsTemplateRow}" Value="True">
                            <Setter Property="Background" Value="#FFFFE0"/>
                            <Setter Property="Foreground" Value="Black"/>
                            <Setter Property="FontWeight" Value="DemiBold"/>
                            <Setter Property="FontSize" Value="14"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#FF2E4687"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="BorderBrush" Value="Black"/>
                    <Setter Property="BorderThickness" Value="1"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="NO" Binding="{Binding NO}" Width="40"/>
                <DataGridTextColumn Header="Factory" Binding="{Binding Factory}" Width="80"/>
                <DataGridTextColumn Header="Machine Name" Binding="{Binding Machine_Name}" Width="150"/>

                <!-- Cột ngày sẽ thêm động ở code-behind -->

                <DataGridTextColumn Header="Average" Binding="{Binding AveragePerformance, StringFormat={}{0:F2}}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</UserControl>
