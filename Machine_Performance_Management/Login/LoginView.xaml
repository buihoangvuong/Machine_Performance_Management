<Window x:Class="Machine_Performance_Management.Login.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Machine_Performance_Management.Login"
        xmlns:viewmodels="clr-namespace:Machine_Performance_Management.Login" 
        d:DataContext="{d:DesignInstance Type=viewmodels:LoginViewModel}"
        mc:Ignorable="d" Height="370" Width="550"
        FocusManager.FocusedElement="{Binding ElementName=UsernameTextBox}"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Window.Resources>
        <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
    </Window.Resources>
    <Grid Margin="10">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Background="White" 
                Margin="0" Width="350" Height="auto">
            <Image Source="pack://application:,,,/Resources/partron_login.jpg" Width="245"
               HorizontalAlignment="Center" Margin="10,0,10,15"/>
            <Grid Margin="0,0,0,40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Icon -->
                <TextBlock Text="👤" FontSize="22" Foreground="#FF3D598D" VerticalAlignment="Center" Margin="2,1,4,9"/>

                <!-- Placeholder -->
                <TextBlock Name="PlaceholderText" Text="ID" Foreground="Gray" 
           VerticalAlignment="Center" Margin="5,0,0,0" FontSize="21"
           Grid.Column="1" IsHitTestVisible="False"
           Visibility="{Binding Username, Converter={StaticResource StringToVisibilityConverter}}"/>

                <!-- TextBox -->
                <TextBox Name="UsernameTextBox" Grid.Column="1" 
         FontSize="22" BorderThickness="0,0,0,1" 
         BorderBrush="#CCCCCC" Background="Transparent"
         Text="{Binding Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Foreground="#FF555151" Margin="4,4,0,5"/>
            </Grid>

            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Icon -->
                <TextBlock Text="🔒" FontSize="20" Foreground="#FF3D598D"  VerticalAlignment="Center"  Margin="4,1,6,9"/>

                <!-- Placeholder -->
                <TextBlock Name="PasswordPlaceholder" Text="Password" Foreground="Gray" 
           VerticalAlignment="Center" Margin="5,0,0,0" FontSize="20"
           Grid.Column="1" IsHitTestVisible="False"
           Visibility="{Binding Password, Converter={StaticResource StringToVisibilityConverter}}"/>

                <!-- PasswordBox -->
                <PasswordBox local:PasswordHelper.BoundPassword="{Binding Password, Mode=TwoWay}"  Loaded="txtPassword_Loaded"
             local:PasswordHelper.BindPassword="True" Name="PasswordBox" Grid.Column="1" 
             FontSize="21" BorderThickness="0,0,0,1" 
             BorderBrush="#CCCCCC" Background="Transparent" Foreground="#FF474545" Margin="5,4,0,3"/>
            </Grid>
            <Grid Margin="0,0,0,20">
                <!-- Checkbox Ghi nhớ tài khoản -->
                <CheckBox Content="SAVE ID" 
            IsChecked="{Binding RememberMe}" 
            Margin="286,0,0,0" />
            </Grid>
            <Button Command="{Binding LoginCommand}" Content="Login" Height="35" Margin="6,0,0,0" FontSize="21" 
                Background="#FF3D598D" Foreground="White" FontWeight="Bold" 
                BorderBrush="#FF203F81" Cursor="Hand" FontFamily="Times New Roman" IsDefault="True">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="5" Padding="5"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="1">
                                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>
